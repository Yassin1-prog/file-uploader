<%- include('header') %>

<div class="max-w-6xl mx-auto px-4 py-8 flex-grow">
  <!-- Folder Header -->
  <div class="flex items-center justify-between mb-6">
    <div class="flex items-center space-x-3">
      <i class="fa-solid fa-folder text-2xl text-yellow-500"></i>
      <h1 class="text-2xl font-bold text-gray-900"><%= folder.name %></h1>
    </div>
  </div>

  <!-- Files Section -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-200">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-semibold text-gray-800">Files</h2>
    </div>

    <% if (files && files.length > 0) { %>
    <ul class="divide-y divide-gray-200">
      <% files.forEach(function(file) { %>
      <li class="transition-colors duration-150">
        <a
          href="/file/<%= file.id %>"
          class="px-6 py-4 flex items-center hover:bg-gray-50 group"
        >
          <!-- File Icon - Dynamic based on file type -->
          <div
            class="w-10 h-10 flex items-center justify-center rounded-lg bg-gray-100 group-hover:bg-gray-200 transition-colors duration-150"
          >
            <i
              class="fa-solid fa-file text-gray-500 group-hover:text-blue-500 transition-colors duration-150"
            ></i>
          </div>

          <!-- File Details -->
          <div class="ml-4 flex-grow">
            <div class="flex items-center space-x-2">
              <span
                class="font-medium text-gray-900 group-hover:text-blue-600 transition-colors duration-150"
              >
                <%= file.name %>
              </span>
            </div>
            <div class="flex items-center space-x-4 mt-1">
              <!-- Upload Date -->
              <div class="flex items-center text-sm text-gray-500">
                <i class="fa-regular fa-clock mr-1.5"></i>
                <%= new Date(file.uploadTime).toLocaleDateString(undefined, {
                year: 'numeric', month: 'short', day: 'numeric' }) %>
              </div>
            </div>
          </div>

          <!-- Arrow Icon -->
          <div class="ml-4">
            <i
              class="fa-solid fa-chevron-right text-gray-400 group-hover:text-blue-500 transition-colors duration-150"
            ></i>
          </div>
        </a>
      </li>
      <% }); %>
    </ul>
    <% } else { %>
    <div class="px-6 py-12 text-center">
      <div
        class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-gray-100 mb-4"
      >
        <i class="fa-regular fa-folder-open text-2xl text-gray-400"></i>
      </div>
      <h3 class="text-lg font-medium text-gray-900 mb-2">No files yet</h3>
      <p class="text-gray-500">
        This folder is empty. Upload some files to get started.
      </p>
    </div>
    <% } %>
  </div>
</div>

<%- include('footer') %>
