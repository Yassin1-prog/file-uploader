<%- include('header') %>

<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-3xl mx-auto px-4">
    <div class="bg-white rounded-lg shadow-md p-6">
      <!-- File Information Card -->
      <div class="mb-6">
        <h1 class="text-2xl font-bold text-gray-900 mb-4">File Details</h1>

        <!-- File Name -->
        <div class="mb-4">
          <label class="block text-sm font-medium text-gray-600"
            >File Name</label
          >
          <p class="mt-1 text-lg text-gray-900"><%= file.name %></p>
        </div>

        <!-- Upload Time -->
        <div class="mb-4">
          <label class="block text-sm font-medium text-gray-600"
            >Upload Time</label
          >
          <p class="mt-1 text-lg text-gray-900">
            <%= new Date(file.uploadTime).toLocaleString('en-US', { dateStyle:
            'medium', timeStyle: 'short' }) %>
          </p>
        </div>

        <!-- File Size -->
        <div class="mb-6">
          <label class="block text-sm font-medium text-gray-600"
            >File Size</label
          >
          <p class="mt-1 text-lg text-gray-900">
            <%= (file.size / (1024 * 1024)).toFixed(2) %> MB
          </p>
        </div>

        <!-- Action Buttons -->
        <div class="flex flex-col sm:flex-row gap-4">
          <!-- View Button -->
          <a
            href="<%= file.fileUrl %>"
            target="_blank"
            class="flex-1 inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5 mr-2"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
              <path
                fill-rule="evenodd"
                d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z"
                clip-rule="evenodd"
              />
            </svg>
            View File
          </a>

          <!-- Download Button -->
          <a
            href="<%= file.fileUrl %>"
            download
            class="flex-1 inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5 mr-2"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path
                fill-rule="evenodd"
                d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z"
                clip-rule="evenodd"
              />
            </svg>
            Download
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('footer') %>
